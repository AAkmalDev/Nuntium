<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView_Toolbar" parent="">
        <item name="android:layout_marginStart">20dp</item>
        <item name="fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextView_Toolbar_Desc" parent="">
        <item name="android:layout_marginStart">20dp</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_below">@id/welcome_text</item>
        <item name="android:textColor">@color/grey_primary</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EditText_Auth_Layout" parent="">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textColorHint">@color/grey_primary</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button_Style_Auth" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="backgroundTint">@color/purple_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextView_Profile_Layout" parent="">
        <item name="android:layout_marginStart">24dp</item>
        <item name="fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/grey_darker</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ImageView_Profile_Layout" parent="">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="Relative_Profile_Layout" parent="">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/edit_text_inactive_back</item>
    </style>

    <style name="OtpWidget"/>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>